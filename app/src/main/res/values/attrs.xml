        <attr format="reference" name="floatLabelTextAppearance"/>
        <attr format="reference|dimension" name="floatLabelPaddingLeft"/>
        <attr format="reference|dimension" name="floatLabelPaddingRight"/>
        <attr format="reference|dimension" name="floatLabelPaddingTop"/>
        <attr format="reference|dimension" name="floatLabelPaddingBottom"/>
